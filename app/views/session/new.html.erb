
<div id="first_login">
<div class = "box_login">
		<%= form_tag '/login' do %>
			<div class="field">
				<p>Name:</p>
				<%= text_field_tag "name" %>
			</div>
			<div class="field">
				<p>Password: </p>
				<%= password_field_tag 'password' %>
			</div>
			<div class="actions">
		        <%= submit_tag "Login!", class: "btn" %>
		    </div>
		<% end %>
	</div>	
</div>