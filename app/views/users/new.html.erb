<div id="login">
  <%= form_for @user do |f| %>
       <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation %>
      </div>
      <div class="field">
        <%= f.label :Tag_Line %><br />
        <%= f.text_field :tagline %>
      </div>


      <div class="field">
        <%= f.label :Age %><br />
        <%= f.text_field :age %>
      </div>
      <div class="field">
        <%= f.label :gender %><br />
        Male: <%= radio_button_tag :gender, 'male' %>
        Female: <%= radio_button_tag :gender, 'female' %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
<% end %>
</div>