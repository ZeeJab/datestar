<h1> <%= @user.name %> </h1>
 <%= link_to 'edit', edit_user_path if @authenticated_user == @user %>

<div class="profile">
	<div class="subheading">Name</div>
	<div class="subcontent"> <%= @user.name %>  </div>
	<div class="subheading">Tagline</div>
	<div class="subcontent"> <%= @user.tagline %>    </div>
	<div class="subheading">Profile Picture</div>
	<div class="subcontent"><%= image_tag @user.photos[@user[:main_pic_id]].photo if !(@user.photos.empty?) %></div>
	<div class="subheading">Age</div>
	<div class="subcontent"> <%= @user.age %>    </div>
	<div class="subheading">Gender</div>
	<div class="subcontent"> <%= @user.gender %>    </div>
	<div class="subheading">Location</div>
	<div class="subcontent"> <%= @user.city + @user.state %>    </div>
	<div class="subheading">Ethnicity</div>
	<div class="subcontent"> <%= @user.ethnicity %>    </div>
	<div class="subheading">Description</div>
	<div class="subcontent"> <%= @user.description %>    </div>

	<%= link_to 'Message Me!',  match_path, class: "btn" if @show %>		<!-- 	# sends to questionaire first -->
	<%= link_to 'Message Me!',  write_path, class: "btn" if @matched %>		<!-- # sends directly to draft -->
	 <%= link_to 'edit', edit_user_path if @authenticated_user == @user %>
</div>


<h2>Pictures:</h2>
<br>
<% @user.photos.each do |p| %>
<%= image_tag p.photo.thumb %>
<% end %>

	<%= form_for @p, html: {multipart: true} do |f| %>
		<%= f.label :photo if (@authenticated_user == @user) %>
		<%= f.file_field :photo  if (@authenticated_user == @user) %>
		<%= f.text_field :remote_photo_url if (@authenticated_user == @user) %>
		<%= f.hidden_field :user_id, :value => @authenticated_user.id if @authenticated_user %>
 		<%= f.submit :upload, class: "btn"  if (@authenticated_user == @user) %>
	<% end %>
